root = true

[*]
# Set default charset
charset = utf-8
# Unix-style newlines
end_of_line = lf
# Use spaces to indent
indent_style = space
# New line ending every file
insert_final_newline = true
# 2-space indents
indent_size = 2
# Keep whitespaces
trim_trailing_whitespace = false

[*.{py}]
# 4-space indents
indent_size = 4
# Remove end-of-line whitespaces
trim_trailing_whitespace = true
